---
- name: Update APT package cache
  apt:
    update_cache: yes

- name: Install unzip and tar
  ansible.builtin.apt:
    name:
      - unzip
      - tar
    state: present
  become: true

- name: Download Apache Maven
  vars:
    myurl: "https://dlcdn.apache.org/maven/maven-3/3.9.6/binaries/apache-maven-3.9.6-bin.tar.gz"
  tasks:
    - name: Extract archive
      ansible.builtin.unarchive:
        src: "{{ myurl }}"
        dest: /opt